{
  "manifest_version": 2,
  "name": "5DPocket",
  "description": "這是5DPocket",
  "version": "1",
  "browser_action": {
    "default_title": "5DPocket",
    "default_icon": "icons/pocket.png",
    "default_popup": "index.html"
  },
  "permissions":[
    "tabs",
    "contextMenus",
    "activeTab"
  ],
  "content_scripts" : [
    {
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background":{
    "scripts": ["event.js"],
    "persistent": true
  },
  "icons": { 
    "16": "icons/pocket.png",
    "48": "icons/pocket48.png"
   },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://code.jquery.com https://cdn.jsdelivr.net; object-src 'self'"
}